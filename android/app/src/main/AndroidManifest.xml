<!-- android/app/src/main/AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Android 11+ 패키지 가시성: 인스타 + SEND(image/*) 인텐트 조회 허용 -->
    <queries>
        <package android:name="com.kakao.talk" />
        <package android:name="com.instagram.android" />
        <package android:name="com.nhn.android.band"/>
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="com.instagram.share.ADD_TO_STORY" />
            <data android:mimeType="image/*" />
        </intent>

        <!-- ✅ PASS 호출/폴백을 위한 추가 쿼리 -->
        <!-- intent:// URI -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="intent" />
        </intent>

        <!-- passauth:// 커스텀 스킴 -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="passauth" />
        </intent>

        <!-- market:// (플레이스토어 폴백) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="market" />
        </intent>

        <!-- 구글 플레이 앱 -->
        <package android:name="com.android.vending" />

        <!-- (권장) 통신사/단말별 PASS 패키지들: KCB 가이드 명시분을 추가 -->
        <package android:name="com.sktelecom.tauth" />
        <package android:name="com.lguplus.smartotp" />
        <package android:name="kr.co.kcp.pass" />

        <!-- KT PASS -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="ktauthexternalcall" />
        </intent>
        <package android:name="com.kt.ktauth" />

        <!-- SKT PASS (의미상 중복이어도 안전) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="tauthlink" />
        </intent>

        <!-- LG U+ PASS -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="upluscorporation" />
        </intent>


    </queries>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="29" />

    <application
        android:name=".MainApplication"
        android:networkSecurityConfig="@xml/network_security_config"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="false"
        android:theme="@style/AppTheme"
        android:supportsRtl="true">

        <!-- ✅ Kakao SDK AppKey -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <!-- ✅ FileProvider (단일 정의로 정리)
             - react-native-share의 useInternalStorage=true가 이 프로바이더를 통해 content:// 부여
             - authorities는 ${applicationId}.fileprovider 로 통일 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"
            android:exported="true">

            <!-- A. 런처(앱 실행) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- B. 카카오 로그인 리다이렉트 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="@string/kakao_custom_scheme" android:host="oauth" />
            </intent-filter>

        </activity>
    </application>
</manifest>
